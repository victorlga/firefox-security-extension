{
  "manifest_version": 2,
  "name": "FireFoxSec",
  "version": "1",
  "description": "A Mozilla Firefox extension capable of identifying security vulnerabilities and privacy concerns on websites.",
  "icons": {
    "48": "icons/lock-48.png",
    "96": "icons/lock-96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/lock-48.png",
      "96": "icons/lock-96.png"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "activeTab"
  ]
}
